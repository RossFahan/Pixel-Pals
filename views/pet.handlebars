<div>
    <h2>{{name}}</h2>
</div>
<div class="container">
    <figure class="drop-zone" id="{{animal.prefered_food}}" data-id="{{id}}">

        {{{get_animal animal.types}}}
    </figure>
</div>
<div class="container">
    <div class="pet-status">
        <div class="status-bar hunger">
            <div class="status-fill" id="hunger-fill"></div>
        </div>
        <div class="status-bar mood">
            <div class="status-fill" id="mood-fill"></div>
        </div>
        <div class="status-bar energy">
            <div class="status-fill" id="energy-fill"></div>
        </div>
    </div>
</div>
<div>
    {{!-- <button class="" type="button">Feed</button> --}}

    <div class="dropdown">
        <div class="dropdown-trigger">
            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu3">
                Food
            </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu3" role="menu">
            <div class="dropdown-content">
                {{{get_food 'Steak'}}}
                {{{get_food 'Fish'}}}
                {{{get_food 'Fruit'}}}
                {{{get_food 'Vegetable'}}}
                {{{get_food 'Cheese'}}}
                {{{get_food 'Seeds'}}}
                {{{get_food 'Mouse'}}}
            </div>

        </div>
    </div>


    <button class="activity-list" type="button">Play</button>
    <button type="button">Sleep</button>
</div>

<script src="/js/feed.js"></script>
<script src="/js/play.js"></script>
